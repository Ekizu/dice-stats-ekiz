    <script language = "JavaScript">
        var chartOptions = {
            //NOTE:Couldn't adjust "hAxis.baseline" to make it thicker
            backgroundColor:{
                fill: '#faf0e1',
                fillOpacity: 0.1,
            },
            chartArea:{
                backgroundColor:{
                //stroke: 'black',
                //strokeWidth: 5,
                fill: '#faf0e1',
                fillOpacity: 0.1,
                },
            },
            hAxis: {
                title: 'Die Number',
                titleTextStyle:{
                    fontSize:20,
                },
                textStyle:{
                    fontSize: 12,
                },
                gridlines:{
                    color:'black',
                },
            },
            vAxis: {
                title: 'Number Of Rolls',
                titleTextStyle:{
                    fontSize:20,
                },
                textStyle:{
                    fontSize: 15,
                },
                gridlines:{
                    color:'black',
                },
                minorGridlines:{
                    color:'black',
                },
            },
            legend: 'none',
        }

        function drawChartd2() {
            // Define the chart to be drawn.
            var data = google.visualization.arrayToDataTable([
                ['Die Number', 'Number Of rolls'],
                ['1',  5],
                ['2',  9]
            ]);

            var options = {title: 'D-2 Roll Data'}; 

            // Instantiate and draw the chart.
            var chart = new google.visualization.ColumnChart(document.getElementById('d2Chart'));
            chart.draw(data, options);
        }

        function drawChartd3() {
            // Define the chart to be drawn.
            var data = google.visualization.arrayToDataTable([
                ['Die Number', 'Number Of rolls'],
                ['1',  5],
                ['2',  2],
                ['3',  2]
            ]);

            // Instantiate and draw the chart.
            var chart = new google.visualization.ColumnChart(document.getElementById('d3Chart'));
            chart.draw(data, chartOptions);
        }

        function drawChartd4() {
            // Define the chart to be drawn.
            var data = google.visualization.arrayToDataTable([
                ['Die Number', 'Number Of rolls'],
                ['1',   {{D4_ROLL_DATA.[0]}}],
                ['2',   {{D4_ROLL_DATA.[1]}}],
                ['3',   {{D4_ROLL_DATA.[2]}}],
                ['4',   {{D4_ROLL_DATA.[3]}}]
            ]);

            // Instantiate and draw the chart.
            var chart = new google.visualization.ColumnChart(document.getElementById('d4Chart'));
            chart.draw(data, chartOptions);
        }

        function drawChartd20() {
            // Define the chart to be drawn.
            var data = google.visualization.arrayToDataTable([
                ['Die Number', 'Number Of rolls'],
                ['1',   {{D20_ROLL_DATA.[0]}}],
                ['2',   {{D20_ROLL_DATA.[1]}}],
                ['3',   {{D20_ROLL_DATA.[2]}}],
                ['4',   {{D20_ROLL_DATA.[3]}}],
                ['5',   {{D20_ROLL_DATA.[4]}}],
                ['6',   {{D20_ROLL_DATA.[5]}}],
                ['7',   {{D20_ROLL_DATA.[6]}}],
                ['8',   {{D20_ROLL_DATA.[7]}}],
                ['9',   {{D20_ROLL_DATA.[8]}}],
                ['10',  {{D20_ROLL_DATA.[9]}}],
                ['11',  {{D20_ROLL_DATA.[10]}}],
                ['12',  {{D20_ROLL_DATA.[11]}}],
                ['13',  {{D20_ROLL_DATA.[12]}}],
                ['14',  {{D20_ROLL_DATA.[13]}}],
                ['15',  {{D20_ROLL_DATA.[14]}}],
                ['16',  {{D20_ROLL_DATA.[15]}}],
                ['17',  {{D20_ROLL_DATA.[16]}}],
                ['18',  {{D20_ROLL_DATA.[17]}}],
                ['19',  {{D20_ROLL_DATA.[18]}}],
                ['20',  {{D20_ROLL_DATA.[19]}}]
            ]);

            // Instantiate and draw the chart.
            var chart = new google.visualization.ColumnChart(document.getElementById('d20Chart'));
            chart.draw(data, chartOptions);
        }

        /*
