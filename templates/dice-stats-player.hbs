<!-- Displays Specific Player info -->

<!-- class values associate to css file-->

<form>
    <head>
        <script type = "text/javascript">
            google.charts.load('current', {packages: ['corechart']});     
        </script>
    </head>

    <!-- Example of using en.json values <li>{{localize "DICE_STATS_TEXT.player-stats-button-title"}} : {{testhandle}}</li>-->


    <div class="col">
        <h1 class="dice-type-title">{{PLAYER_NAME}} Roll Data</h1>
        {{#ifDieUsed TOTAL_ROLLS.[0] }}
        <h1 class="dice-type-title">D-2 (COIN) Stats</h1>
            <div id = "d2Chart" class="chart-dice-stats"></div>
            <ul class="flexcol">
                <li>{{localize DICE_STATS_TEXT.player_data_form.total_rolls}}   {{TOTAL_ROLLS.[0]}}</li>
                <li>{{localize DICE_STATS_TEXT.player_data_form.mean}}          {{MEAN.[0]}}</li>
                <li>{{localize DICE_STATS_TEXT.player_data_form.median}}        {{MEDIAN.[0]}}</li>
                <li>{{localize DICE_STATS_TEXT.player_data_form.mode}}          {{MODE.[0]}}</li>
                {{#ifStreakIsBlind S_IS_B.[0]}}
                    <li>{{localize DICE_STATS_TEXT.player_data_form.streak}}    {{STREAK.[0]}}</li>
                {{else}}
                    <li>{{localize DICE_STATS_TEXT.player_data_form.streak_blind}}</li>
                {{/ifStreakIsBlind}}
            </ul>
        <br>
        {{/ifDieUsed}}
        

        {{#ifDieUsed TOTAL_ROLLS.[1] }}
